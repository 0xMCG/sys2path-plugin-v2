{
  "manifest_version": 3,
  "name": "Sys2Path Plugin Demo",
  "version": "0.1.0",
  "description": "A modern browser extension for capturing ChatLLM conversations and general page content",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "*://chatgpt.com/*",
    "*://chat.openai.com/*",
    "*://claude.ai/*",
    "*://gemini.google.com/*",
    "*://notebooklm.google.com/*",
    "*://aistudio.google.com/*",
    "*://grok.com/*",
    "*://x.com/i/grok*"
  ],
  "action": {
    "default_title": "Toggle Sys2Path Sidebar"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://accounts.google.com/*",
        "*://github.com/login/*",
        "*://twitter.com/i/oauth2/*",
        "*://x.com/i/oauth2/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.js", "sidebar.css", "dashboard.html", "dashboard.js", "dashboard.css"],
      "matches": ["<all_urls>"]
    }
  ]
}

